<p id="notice"><%= notice %></p>

<h1>Attach Files</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @attach_files.each do |attach_file| %>
      <tr>
        <td><%= attach_file.title %></td>
        <td><%= image_tag attach_file.image.url, class: "thumbnail" if attach_file.image? %></td>
        <td><%= link_to 'Show', attach_file %></td>
        <td><%= link_to 'Edit', edit_attach_file_path(attach_file) %></td>
        <td><%= link_to 'Destroy', attach_file, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Attach File', new_attach_file_path %>
